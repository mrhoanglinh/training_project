<div class="col-md-10 col-md-offset-1">
  <div class="row" style="padding: 50px 10px;">
    <div class="form-group">
      <div class="col-md-offset-4 col-md-4">
        <h3>編集 <%= resource_name.to_s.humanize %></h3>
      </div>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="text-danger"><%= devise_error_messages! %></div>

      <div class="form-group">
        <div class="field">
          <span class="control-label col-md-3"><strong>名前</strong></span>
          <div class="col-md-3" style="width: 90%;">
            <%= f.text_field :name, autofocus: true, :class => 'form-control' %>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <%= f.radio_button :is_female, true %> <%= f.label :is_female, "女性" %>
      </div>
      <div class="col-md-3">
        <%= f.radio_button :is_female, false %> <%= f.label :is_female, "男性" %>
      </div>

      <div class="form-group">
        <div class="field">
          <span class="control-label col-md-3"><strong>メールアドレス</strong></span>
          <div class="col-md-3" style="width: 90%;">
            <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
          </div>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <div class="field">
          <span class = 'control-label col-md-3'><strong>パスワード</strong> <i>(変更したくない場合は空白のままにしてください)</i></span>
          <div class="col-md-3" style="width: 90%;">
            <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
            <% if @minimum_password_length %>
              <em><%= @minimum_password_length %> 文字必要です</em>
            <% end %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
          <span class = 'control-label col-md-3'><strong>もう一度パスワード</strong></span>
          <div class="col-md-3" style="width: 90%;">
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %><br />
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-3" style="width: 90%;">
          <% if current_user.avatar.url.present? %>
              <div class="author_image_preview">
                <%= image_tag(current_user.avatar.url) %>
              </div>
              <%= f.label :remove_avatar do %>
                  <p style="font-size: 12px; font-style: italic; font-weight: inherit;"><%= f.check_box :remove_avatar %> 画像を削除</p>
              <% end %>

          <% end %>
          <%= f.file_field :avatar %>
          <%= f.hidden_field :avatar_cache %>
        </div>
      </div>

      <div class="form-group">
        <div class="field">
          <span class = 'control-label col-md-3'><strong>現在のパスワード</strong><i>(変更を確認するために現在のパスワードが必要です)</i></span>
          <div class="col-md-3" style="width: 90%;">
            <%= f.password_field :current_password, autocomplete: "off", :class => 'form-control' %>
          </div>
        </div>
      </div>

        <div class="form-group">
          <div class="col-md-offset-2 col-md-3">
            <div class="actions">
              <%= f.submit "更新", :class => 'btn btn-default btn-primary' %>
            </div>
          </div>
        </div>
    <% end %>

    <div class="form-group">
      <div class="col-md-offset-4 col-md-4">
        <h4>アカウントを削除?</h4>
        <p><%= button_to "アカウントを削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn btn-xs btn-danger' %></p>
        <%= link_to "バック", :back %>
      </div>
    </div>
  </div>
</div>
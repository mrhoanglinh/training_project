<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal center"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <div class="col-lg-offset-4 col-lg-4">
      <h2>サインアップ</h2>
    </div>
  </div>

  <div class="form-group">
    <%#= f.label :email, :class => 'control-label col-lg-3' %>
    <span class="control-label col-lg-3">メールアドレス</span>
    <div class="col-lg-4">
      <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%#= f.label :password, :class => 'control-label col-lg-3' %>
    <span class = 'control-label col-lg-3'>パスワード</span>
    <% if @minimum_password_length %>
    <em>(最低 <%= @minimum_password_length %> 文字必要です)</em>
    <% end %><br />
    <div class="col-lg-4">
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%#= f.label :password_confirmation, :class => 'control-label col-lg-3' %><br />
    <span class = 'control-label col-lg-3'>もう一度パスワード</span>
    <div class="col-lg-4">
      <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-3 col-lg-4">
      <%= f.submit "サインアップ", :class => 'btn btn-default btn-primary' %><br />
      <%= render "devise/shared/links" %><br />
    </div>
  </div>
<% end %>
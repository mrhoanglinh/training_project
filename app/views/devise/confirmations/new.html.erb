<div class="col-md-10 col-md-offset-1">
  <div class="row" style="padding: 120px 20px;">
    <div class="col-md-3">
      <h3>再確認</h3>
    </div>

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <div class="col-md-3">
          <div class="text-danger"><%= devise_error_messages! %></div>
        </div>

        <div class="field">
          <span class="control-label col-md-3">メールアドレス</span>
          <div class="col-md-3" style="width: 90%;">
            <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), :class => 'form-control' %>
          </div>
        </div>

        <div class="actions">
          <div class="col-md-3">
            <%= f.submit "再確認", :class => 'btn btn-default btn-primary' %>
          </div>
        </div>
    <% end %>

    <div class="col-md-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>



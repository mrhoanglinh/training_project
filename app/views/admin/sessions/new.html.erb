<!DOCTYPE html>
<html>
<head>
  <title>TrainingProject</title>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track'=> 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track'=> 'reload' %>
  <%= javascript_include_tag 'ckeditor/config' %>
</head>

<body>
  <div class="col-md-10 col-md-offset-1">
    <div class="row" style="padding: 120px 20px;">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal center"}) do |f| %>

          <div class="form-group">
            <div class="col-lg-offset-4 col-lg-4">
              <h2>管理者サインイン</h2>
            </div>
          </div>

          <div class="form-group">
            <%#= f.label :email, :class => 'control-label col-lg-3' %>
            <span class="control-label col-lg-3">メールアドレス</span>

            <div class="col-lg-4">
              <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%#= f.label :password, :class => 'control-label col-lg-3' %>
            <span class = 'control-label col-lg-3'>パスワード</span>
            <div class="col-lg-4">
              <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
            </div>
          </div>

          <!---->
          <!--<% if devise_mapping.rememberable? -%>-->
              <!--<div class="form-group">-->
              <!--<div class="col-lg-offset-3 col-lg-4">-->
              <!--<%= f.check_box :remember_me%>-->
              <!--<%= f.label :remember_me %>-->
              <!--</div>-->
              <!--</div>-->
              <!--<% end -%>-->
          <!---->

          <div class="form-group">
            <div class="col-lg-offset-4 col-lg-4">
              <%= f.submit "サインイン", :class => 'btn btn-default btn-primary' %>
              <!--<br /> OR <br />-->
              <%#= render "devise/shared/links" %><br />
            </div>
          </div>
      <% end %>
    </div>
  </div>
</body>

</html>


<div class="form-group" style="padding-left: 50px; padding-right: 30px">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>ID</th>
      <th>作成時間</th>
      <th>タイトル</th>
      <th>カテゴリ</th>
      <th>オススメ</th>
      <th>作成者</th>
      <th>サムネイル画像</th>
      <th>公開 / 非公開</th>
      <th>公開時間</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
    <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.id %></td>
          <td><%= blog.created_at.strftime("%Y" +'年'+ "%m" +'月'+ "%d" +'日'+ "  %H:%M:%S") %></td>
          <td><%= blog.title %></td>
          <td><%= blog.category.name %></td>
          <td>
            <% if blog.isSuggest == 1 %>
                <div class="isSuggestCircle"></div>
            <% end %>
          </td>
          <td><%= blog.author %></td>
          <td><%= image_tag blog.image.thumb.url %></td>
          <td>
            <% if blog.isPublic == 1 %>
                <%= '公開中' %>
            <% else %>
                <%= '非公開中' %>
            <% end %>
          </td>
          <td>
            <%= blog.datePublic.try(:strftime, "%Y" +'年'+ "%m" +'月'+ "%d" +'日'+ "  %H:%M:%S" ) %><br />
            <div class="btn-group">
              <%= button_to "時間変更", url_for(controller: 'blogs', action: 'changeDate', id: blog.id), :class =>"btn btn-default datepicker" %>
            </div>
            <div class="btn-group">
              <% if blog.isPublic == 1 %>
                  <%= button_to "停止", url_for(controller: 'blogs', action: 'unPublic', id: blog.id), method: :post, remote: :true, class: "btn btn-default btn-danger"%>
              <% end %>
            </div>
          </td>
          <td>
            <%= link_to "記事編集", edit_admin_blog_path(blog.id), :class=>"btn btn-default" %>
            <%= link_to "リストコメント", admin_blog_path(blog.id), :class => "btn btn-default" %>
            <%= link_to "削除", admin_blog_path(blog.id), data: {confirm: "削除ですか？"}, :method => :delete,:class => 'btn btn-default btn-danger'%>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
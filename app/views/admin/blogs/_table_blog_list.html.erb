
  <table class=" table table-striped">
    <thead>
      <tr>
        <th width="3%">ID</th>
        <th width="15%"><%= t "admin.blog.table.create_at"%></th>
        <th width="8%"><%= t "admin.blog.table.title"%></th>
        <th width="8%"><%= t "admin.blog.table.category"%></th>
        <th width="7%"><%= t "admin.blog.table.isSuggest"%></th>
        <th width="10%"><%= t "admin.blog.table.author"%></th>
        <th width="8%"><%= t "admin.blog.table.image"%></th>
        <th width="10%"><%= t "admin.blog.table.public"%></th>
        <th width="15%"><%= t "admin.blog.table.datePublic"%></th>
        <th width="9%"><%= t "admin.blog.table.action"%></th>
      </tr>
    </thead>
    <tbody>
    <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.id %></td>
          <td><%= blog.created_at.strftime("%Y年%m月%d日 %H:%M") %></td>
          <td><%= blog.title %></td>
          <td><%= blog.category.name %></td>
          <td>
            <% if blog.isSuggest == 1 %>
                <div class="isSuggestCircle"></div>
            <% end %>
          </td>
          <td><%= blog.author %></td>
          <td><%= image_tag blog.image.thumb.url %></td>
          <% if blog.isPublic == 1 %>
              <td id="public_id_<%=blog.id%>"><%= '公開中' %></td>
          <% else %>
              <td id="public_id_<%=blog.id%>"><%= '非公開中' %></td>
          <% end %>
          <td>
            <div class="row" id="public_time_<%=blog.id%>"  >
              <%= blog.datePublic.try(:strftime, "%Y年%m月%d日 %H:%M" ) %>
            </div>

            <div class="row" change_sattus_id="<%= blog.id %>">
              <div class='input-group date datetimepicker_cell' style="display: inline;">
                <input id="input_date_<%=blog.id%>" style="display: none;" class="form-control input_date">
                <span class="" style="padding: 0; background-color: transparent; border: none; display: inline;" change_sattus_id="<%= blog.id %>">
                  <span class="btn btn-default btn-sm change_time_button" id="change_time_button_<%= blog.id %>">
                    <%= t("admin.blog.table.change_time") %>
                  </span>
                </span>
              </div>

              <% if blog.isPublic == 1 %>
                  <div class="btn btn-sm btn-danger public_button " id="unpublic_button_<%= blog.id %>" public_status = 0 >
                    <%= t("admin.blog.table.stop_public") %>
                  </div>
                  <div class="btn btn-sm btn-info public_button " id="public_button_<%= blog.id %>" public_status = 1 style="display: none;">
                    <%= t("admin.blog.table.start_public") %>
                  </div>
              <% else %>
                  <div class="btn btn-sm btn-info public_button " id="public_button_<%= blog.id %>" public_status = 1 >
                    <%= t("admin.blog.table.start_public") %>
                  </div>
                  <div class="btn btn-sm btn-danger public_button " id="unpublic_button_<%= blog.id %>" public_status = 0 style="display: none;">
                    <%= t("admin.blog.table.stop_public") %>
                  </div>
              <% end %>
            </div>
          </td>
          <td>
            <div style="display: inline">
              <%= link_to t("admin.blog.table.edit_blog"), edit_admin_blog_path(blog.id), :class=>"btn btn-default btn-sm" %>
              <%= link_to t("admin.blog.table.list_comment_blog"), admin_blog_comments_path(blog), :class => "btn btn-default btn-sm" %>
              <%#= link_to t("admin.blog.table.delete_blog"), admin_blog_path(blog.id), data: {confirm: "削除ですか？"}, :method => :delete,:class => 'btn btn-default btn-danger'%>
            </div>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

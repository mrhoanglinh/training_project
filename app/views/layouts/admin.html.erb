<!DOCTYPE html>
<html>
  <head>
    <title>イーアス管理ツール</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track'=> 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track'=> 'reload' %>

    <div class="">
      <nav class="navbar navbar-default navbar-inverse">
        <div class="navbar-header">
          <a class="navbar-brand" href=<%= admin_root_path %>><%= t"layout.header.title_header" %></a>
        </div>
        <ul class="nav navbar-nav">
          <li><a href="#"><%= t"layout.header.student" %></a></li>
          <li><a href="#"><%= t"layout.header.self_check" %></a></li>
          <li><a href="#"><%= t"layout.header.friend_hint" %></a></li>
          <li><a href="#"><%= t"layout.header.manager_user" %></a></li>
   

            <li style="display: none;">
              <%= link_to t("layout.header.logout"), destroy_user_session_path, method: :delete, data: { no_turbolink: true } %>
            </li>


          <%#= params[:action] == "default_admin_page" ? "" : "hidden" %>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">ブログ</a>
            <ul class="dropdown-menu" style="margin-top: 3px; border-radius: 5px;">
              <li><%= link_to t("layout.header.list_blog"), admin_blogs_path %></li>
              <li><%= link_to t("layout.header.create_blog"), new_admin_blog_path %></li>
            </ul>
          </li>
        </ul>

          <ul class="nav navbar-nav navbar-right" style="margin-right: 20px;">
            <% if user_signed_in? %>
                <li>
                  <%= link_to t("layout.header.logout"), destroy_user_session_path, method: :delete, data: { no_turbolink: true } %>
                </li>
            <% else %>
                <li>
                  <%= link_to t("layout.header.login"), new_user_session_path %>
                </li>
            <% end %>
          </ul>
        
      </nav>
    </div>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
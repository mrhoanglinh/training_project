<div class="profile">
  <div class="row" id="first_layout" >
    <div class="avatar_layout">
      <img src="/assets/avatar.png" alt="">
    </div>
    <div class="author_info">
      <p class="author_title"><%= t"profile.author_title" %></p>
      <p class="author_name">
        <span class="name"><%= t"profile.author_name" %></span>
        <span class="job"><%= t"profile.author_job" %></span>
      </p>
      <div class="author_birth_place">
        <div class="label">
          <p><%= t"profile.author_birth_place" %></p>
        </div>
        <div class="explain">
          <p><%= t"profile.author_birth_place_text" %></p>
        </div>
      </div>
      <div class="author_age">
        <div class="label">
          <p><%= t"profile.author_age" %></p>
        </div>
        <div class="explain">
          <p><%= t"profile.author_age_text" %></p>
        </div>
      </div>
      <div class="author_subject">
        <div class="label">
          <p><%= t"profile.author_subject" %></p>
        </div>
        <div class="explain">
          <p><%= t"profile.author_subject_text" %></p>
        </div>
      </div>
    </div>
    <div class="author_intro_text">
      <p><%= t"profile.author_intro_text" %></p>
    </div>

  </div>

 <div style="padding-left: 10%;">
   <div class="row" id="second_layout">
     <div class="label">
       <a href="<%= user_edit_path(current_user) %>">プロファイル編集</a>
     </div>
     <div class="label">
       <a href="<%= user_destroy_path %>">ログアウト</a>
     </div>
   </div>
 </div>








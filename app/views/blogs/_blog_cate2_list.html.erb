
<% @blogs_list2.each do |blog| %>
    <li>
      <a href="<%= blog_path(blog.id) %>" style="text-decoration : none" >
        <div class="row">
          <% if blog.isSuggest == 1 %>
              <div class="suggest">
                <img src="/assets/suggest.png" alt="">
              </div>
          <% end %>
          <div class="blog">
            <div class="image_thum">
              <img src=<%= blog.image.url %> alt="">
            </div>
            <div class="title-blog">
              <p><%= blog.title %></p>
            </div>
            <div class="row">
              <div class="col-xs-6">
                <% case blog.category_id %>
                <% when 1 %>
                    <div class="category" style="border: 1px solid #89c529;">
                      <p style="color: #89c529;"><%= blog.category.name %></p>
                    </div>
                <% when 2 %>
                    <div class="category" style="border: 1px solid #f8879f;">
                      <p style="color: #f8879f;"><%= blog.category.name %></p>
                    </div>
                <% when 3 %>
                    <div class="category" style="border: 1px solid #41b1e5;">
                      <p style="color: #41b1e5;"><%= blog.category.name %></p>
                    </div>
                <% end %>
                <div class="public-time">
                  <p><%= blog.datePublic.to_date.strftime("%Y.%m.%d") %></p>
                </div>
              </div>
              <div class="col-xs-6">
                <div class="col-xs-3 action">
                  <span><img src="/assets/interesting.png" alt=""></span>

                  <% @count_action_interest.each do |key,value| %>
                      <% if key == blog.id %>
                          <span><p><%= value %></p></span>
                      <% end %>
                  <% end %>
                  <% unless @count_action_interest.key? blog.id %>
                      <span><p>0</p></span>
                  <% end %>

                </div>
                <div class="col-xs-3 action">
                  <span><img src="/assets/like.png" alt=""></span>

                  <% @count_action_like.each do |key,value| %>
                      <% if key == blog.id %>
                          <span><p><%= value %></p></span>
                      <% end %>
                  <% end %>
                  <% unless @count_action_like.key? blog.id %>
                      <span><p>0</p></span>
                  <% end %>

                </div>
                <div class="col-xs-3 action">
                  <span><img src="/assets/dislike.png" alt=""></span>

                  <% @count_action_dislike.each do |key,value| %>
                      <% if key == blog.id %>
                          <span><p><%= value %></p></span>
                      <% end %>
                  <% end %>
                  <% unless @count_action_dislike.key? blog.id %>
                      <span><p>0</p></span>
                  <% end %>

                </div>
                <div class="col-xs-3 action">
                  <span><img src="/assets/disappoint.png" alt=""></span>

                  <% @count_action_disappoint.each do |key,value| %>
                      <% if key == blog.id %>
                          <span><p><%= value %></p></span>
                      <% end %>
                  <% end %>
                  <% unless @count_action_disappoint.key? blog.id %>
                      <span><p>0</p></span>
                  <% end %>

                </div>
              </div>
            </div>
          </div>
          <hr>
        </div>
      </a>
    </li>
<% end %>
<script>

  function getPaging(str) {

    if (str == '1')
    {
      $('#'+str).addClass('active');
      $.ajax({
        url: "/blogs/",
        dataType: "script",
        method: "get",
        data: {
          'id' :''
        },

      });
    }

    if(str == '2')
    {
      $('#'+str).addClass('active');
      $('#1').removeClass('active');
      $.ajax({
        url: "<%= blogs_path(isSuggest: 1) %>",
        dataType: "script",
        method: "get",
      });
    }


  }

</script>
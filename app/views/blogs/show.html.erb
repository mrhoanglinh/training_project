<div id="blog_detail_and_author">
  <div class="blog-detail" id="view-detail">
    <div class="row">
      <% if @blog.isSuggest == 1 %>
          <div class="suggest">
            <img src="/assets/suggest.png" alt="">
          </div>
      <% end %>
      <div class="blog">
        <div class="title">
          <p><%= @blog.title %></p>
        </div>
        <hr>
        <div class="row">
          <div class="col-xs-6">
            <div class="category">
              <p><%= @blog.category.name %></p>
            </div>
            <div class="public-time">
              <p><%= @blog.datePublic.to_date.strftime("%Y.%m.%d") %></p>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="col-xs-3 action">
              <img src="/assets/interesting.png" alt="">
              <span><p><%= interest_count(@count_action) %></p></span>
            </div>
            <div class="col-xs-3 action">
              <span><img src="/assets/like.png" alt=""></span>
              <span><p><%= like_count(@count_action) %></p></span>
            </div>
            <div class="col-xs-3 action">
              <span><img src="/assets/dislike.png" alt=""></span>
              <span><p><%= dislike_count(@count_action) %></p></span>
            </div>
            <div class="col-xs-3 action">
              <span><img src="/assets/disappoint.png" alt=""></span>
              <span><p><%= disappoint_count(@count_action) %></p></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-4 social social-share-button" data-title="<%= @blog.title %>">
            <button class="btn-twitter" rel="nofollow " data-site="twitter" onclick="return SocialShareButton.share(this);">
              <img src="/assets/twitter.png" alt="">
            </button>
          </div>
          <a href="https://www.facebook.com/sharer/sharer.php?u=http://localhost:3000/blogs/"<%= @blog.id %>>
            <div class="col-xs-4 social">
              <button class="btn-facebook">
                <img src="/assets/facebook.png" alt="">
              </button>
            </div>
          </a>
          <a href="line://msg/text/<%= @blog.title %>">
            <div class="col-xs-4 social">
              <button class="btn-line">
                <img src="/assets/line.png" alt="">
              </button>
            </div>
          </a>
        </div>
        <div class="row">
          <div class="content">
            <img src=<%= @blog.image.url %> alt="">
            <p>
              <%= @blog.content.html_safe %>
            </p>
          </div>
        </div>
        <div class="row">
          <div class="author">
            <div class="author-image">
              <img src=<%= @blog.authorImage.url %> alt="">
              <div class="author-info">
                <p>この記事を書いた人</p>
                <div class="author-name">
                  <p><%= @blog.author %>先生</p>
                </div>
                <p><%= @blog.jobName %> / <%= @blog.age %>歳</p>
              </div>
            </div>

            <% if current_user %>
              <a href="<%= author_path %>">
                <div class="btn-show-profile">
                  <button class="btn-author" id="btn_author" >
                    <div class="row">
                      <p>ナルフォード先生のプロフィールを見る</p>
                      <img src="/assets/arrow.png" alt="">
                    </div>
                  </button>
                </div>
              </a>
            <% end %>

          </div>
        </div>
      </div>

      <div class="rate" >
        <p><%= t"blog.show.rate_title" %></p>
        <div class="row upper" >
          <div class="col-xs-6 rate-button left " action="interest" id="interest">
            <img src="/assets/rate-frame.png" alt="" class="rate-frame">
            <img src="/assets/interesting_rate.jpg" alt="" class="icon">
            <img src="/assets/rate-white-frame.png" alt="" class="rate-white-frame">
            <img src="/assets/tick.png" alt="" class="tick">
            <p><%= t"blog.show.rate.interest" %></p>
          </div>
          <div class="col-xs-6 rate-button right" action="like" id="like">
            <img src="/assets/rate-frame.png" alt="" class="rate-frame">
            <img src="/assets/like_rate.jpg" alt="" class="icon">
            <img src="/assets/rate-white-frame.png" alt="" class="rate-white-frame">
            <img src="/assets/tick.png" alt="" class="tick">
            <p><%= t"blog.show.rate.like" %></p>
          </div>
        </div>
        <div class="row lower" >
          <div class="col-xs-6 rate-button left" action="dislike" id="dislike">
            <img src="/assets/rate-frame.png" alt="" class="rate-frame">
            <img src="/assets/dislike_rate.jpg" alt="" class="icon">
            <img src="/assets/rate-white-frame.png" alt="" class="rate-white-frame">
            <img src="/assets/tick.png" alt="" class="tick">
            <p><%= t"blog.show.rate.dislike" %></p>
          </div>
          <div class="col-xs-6 rate-button right" action="disappoint" id="disappoint">
            <img src="/assets/rate-frame.png" alt="" class="rate-frame">
            <img src="/assets/disappoint_rate.jpg" alt="" class="icon">
            <img src="/assets/rate-white-frame.png" alt="" class="rate-white-frame">
            <img src="/assets/tick.png" alt="" class="tick">
            <p><%= t"blog.show.rate.disappoint" %></p>
          </div>
        </div>
      </div>

      <div class="row comment">
        <p><%= t"blog.show.comment_title" %></p>
        <div class="text-area" >
          <div id="comment_sentences">

          </div>
          <br>
          <%= form_for Comment.new, method: :post, remote: true do |f| %>
              <%= f.text_area :content, placeholder: t("blog.show.comment_text_holder") %>
              <%= f.hidden_field :blog_id, value: @blog.id %>
              <% if current_user %>
                  <%= f.hidden_field :user_id, value: current_user.id %>
              <% end %>
          <% end %>
          <%= button_tag t("blog.show.conment_button_text"), id: "btn_comment" %>
        </div>
      </div>

      <div class="social-bottom">
        <div class="title-social">
          <img src="/assets/social-icon.png" alt="">
          <p>SNSでシェアする</p>
        </div>
        <div class="col-xs-4 social social-share-button" data-title="<%= @blog.title %>">
          <button class="btn-twitter" rel="nofollow " data-site="twitter" onclick="return SocialShareButton.share(this);">
            <img src="/assets/twitter.png" alt="">
          </button>
        </div>
        <div class="col-xs-4 social social-share-button" data-title="<%= @blog.title %>">
          <button class="btn-facebook" rel="nofollow " data-site="facebook" onclick="return SocialShareButton.share(this);">
            <img src="/assets/facebook.png" alt="">
          </button>
        </div>

        <a href="line://msg/text/<%= @blog.title %>">
          <div class="col-xs-4 social">
            <button class="btn-line">
              <img src="/assets/line.png" alt="">
            </button>
          </div>
        </a>

      </div>
    </div>
  </div>
</div>

<script>

  function sendtoline(){
    var link = "http://line.naver.jp/R/msg/text/?";
    link += encodeURIComponent(document.getElementById("msg").value) + "%0D%0A" + encodeURIComponent(document.getElementById("url").value);
    location.href = link;
    return false;
  }

  var check_user_action = "<%= @check_action %>"
  <% if current_user %>
  $(".rate-button").removeClass("rate-active");
  $("#"+ check_user_action).addClass("rate-active");
  <% end %>
  $(".rate-button").on("click", function(){
    var get_action = $(this).attr("action");
    <% if current_user %>
    $(".rate-button").removeClass("rate-active");
    $(this).addClass("rate-active");
    $.ajax({
      url: "/blogusers/create",
      dataType: "script",
      method: "post",
      data: {user_id: <%= current_user.id %>, blog_id: <%= @blog.id %>, user_action: get_action },
    });
    <% else %>
    alert("ログインをしてください。");
    window.location.replace("/users/sign_in");
    <% end %>
  });

</script>